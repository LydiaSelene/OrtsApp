<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- make contextual action bar working with toolbar/actionbar -->

        <!-- ?? lÃ¶st das Doppelbar problem bei toolbar und contextual action bar -->
        <item name="windowActionModeOverlay">true</item>
        <!-- <item name="windowActionBarOverlay">true</item> -->

        <item name="actionModeStyle">@style/Style.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_clear_white_24dp</item>
    </style>

    <style name="Style.ActionMode" parent="@style/Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="background">@color/color_action_mode_bg</item>
        <item name="titleTextStyle">@style/Style.ActionMode.TextStyle</item>

    </style>

    <style name="Style.ActionMode.TextStyle" parent="@style/Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <!-- <item name="windowActionBar">false</item> -->
        <!-- <item name="windowNoTitle">true</item> -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

<!-- Widgets -->

    <style name="LocationButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:height">70dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAnthrazit</item>
    </style>


</resources>
