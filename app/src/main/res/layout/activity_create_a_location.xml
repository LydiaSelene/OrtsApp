<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="@color/bright_foreground_disabled_material_light"
        style="@style/Base.AlertDialog.AppCompat.Light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/createALocationForm"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <TextView
                android:text="Name: "
                android:id="@+id/textView"
                android:layout_column="0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="22sp"
                android:layout_weight="0.33"
                android:allowUndo="false"
                android:elegantTextHeight="false"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textIsSelectable="false" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_location_name"
                android:layout_gravity="center_horizontal"
                android:contextClickable="false"
                android:elegantTextHeight="false"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="@dimen/abc_text_size_large_material"
                android:hint="Name"
                android:textColorHint="@color/colorHintText"
                android:layout_column="1"
                android:layout_weight="1"
                android:textColor="@color/colorAnthrazit" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <TextView
                android:text="Straße:"
                android:id="@+id/textView2"
                android:layout_column="0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="22sp"
                android:layout_weight="0.33"
                android:allowUndo="false"
                android:elegantTextHeight="false"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textIsSelectable="false" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_location_street"
                android:layout_gravity="center_horizontal"
                android:contextClickable="false"
                android:elegantTextHeight="false"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/colorAnthrazit"
                android:textSize="@dimen/abc_text_size_large_material"
                android:hint="Straße, Nr."
                android:textColorHint="@color/colorHintText"
                android:layout_column="1"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <TextView
                android:text="PLZ:"
                android:id="@+id/textView3"
                android:layout_column="0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="22sp"
                android:layout_weight="0.33"
                android:allowUndo="false"
                android:elegantTextHeight="false"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textIsSelectable="false" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_location_postalCode"
                android:layout_gravity="center_horizontal"
                android:contextClickable="false"
                android:elegantTextHeight="false"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/colorAnthrazit"
                android:textSize="@dimen/abc_text_size_large_material"
                android:hint="PLZ"
                android:textColorHint="@color/colorHintText"
                android:layout_column="1"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <TextView
                android:text="Ort:"
                android:id="@+id/textView4"
                android:layout_column="0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="22sp"
                android:layout_weight="0.33"
                android:allowUndo="false"
                android:elegantTextHeight="false"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textIsSelectable="false" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_location_town"
                android:layout_gravity="center_horizontal"
                android:contextClickable="false"
                android:elegantTextHeight="false"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/colorAnthrazit"
                android:textSize="@dimen/abc_text_size_large_material"
                android:hint="Ort"
                android:textColorHint="@color/colorHintText"
                android:layout_column="1"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:gravity="bottom"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Abbruch"
            android:id="@+id/abortButton"
            android:layout_row="23"
            android:layout_column="5"
            android:layout_columnWeight="1"
            android:layout_weight="1"
            android:textSize="18sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Fertique"
            android:id="@+id/applyButton"
            android:layout_row="23"
            android:layout_column="11"
            android:layout_rowWeight="0"
            android:layout_columnWeight="1"
            android:layout_weight="1"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>